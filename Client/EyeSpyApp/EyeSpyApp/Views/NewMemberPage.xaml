<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    xmlns:vm="clr-namespace:EyeSpyApp.ViewModels" 
    x:Class="EyeSpyApp.Views.NewMemberPage" 
    Title="New Member">
    <ContentPage.BindingContext>
        <vm:NewMemberViewModel />
    </ContentPage.BindingContext>
     <ContentPage.ToolbarItems>
        <ToolbarItem 
            Text="Save" 
            Command="{Binding SaveMemberCommand}" 
            IsEnabled="{Binding IsNotBusy}"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
         <StackLayout 
            Grid.Row="0" 
            Spacing="0" 
            Padding="0"
            VerticalOptions="FillAndExpand">
            <Label Text="Text" FontSize="Medium" />
            <Entry Text="{Binding Member.Text}" FontSize="Small" />
            <Label Text="Description" FontSize="Medium" />
            <Editor Text="{Binding Member.Description}" FontSize="Small" Margin="0" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>